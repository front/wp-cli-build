{
  "name": "front-it/wp-cli-build",
  "description": "Fetch specific versions of plugins/themes from wordpress.org using a build file",
  "type": "wp-cli-package",
  "homepage": "https://github.com/front/wp-cli-build",
  "license": "MIT",
  "authors": [
    {
      "name": "Frontkom",
      "email": "front@front.no",
      "homepage": "https://www.frontkom.no"
    },
    {
      "name": "FÃ¡bio Neves",
      "email": "fabio@front.no",
      "homepage": "https://www.frontkom.no"
    },
    {
      "name": "Krzysztof Branecki",
      "email": "krzysztof.branecki@frontkom.com",
      "homepage": "https://www.frontkom.com"
    }
  ],
  "minimum-stability": "dev",
  "autoload": {
    "files": [
      "command.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "alchemy/zippy": "0.4.9",
    "wp-cli/wp-cli": ">=2.0",  
    "symfony/yaml": "5.4.3",
    "phar-io/version": "^3.1.1"
  },
  "require-dev": {
    "wp-cli/wp-cli-tests": "^3.1",
    "rosio/wordpress-testing-harness": "1.1.1",
    "johnpbloch/wordpress": "5.9.0"
  },
  "scripts": {
    "behat": "run-behat-tests",
    "behat-rerun": "rerun-behat-tests",
    "lint": "run-linter-tests",
    "phpcs": "run-phpcs-tests",
    "phpunit": "run-php-unit-tests",
    "prepare-tests": "install-package-tests",
    "test": [
        "@lint",
        "@phpcs",
        "@phpunit",
        "@behat"
    ]
}
}
